<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Regression Tests"
       thread-count="3" parallel="tests" verbose="3">

    <test name="Magento ChromeBrowser Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LogInTest"/>
            <class name="tests.AccountCreationTest"/>
            <class name="tests.AddressBookTest"/>
            <class name="tests.StoreTests"/>
        </classes>
    </test>

    <test name="Magento FirefoxBrowser Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LogInTest"/>
            <class name="tests.AccountCreationTest"/>
            <class name="tests.AddressBookTest"/>
            <class name="tests.StoreTests"/>
        </classes>
    </test>
</suite>